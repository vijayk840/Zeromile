

<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Restaurant</h1>
    <div class="col-6 offset-3">
        <form action="/restaurants/<%= restaurant._id %>?_method=PATCH" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <br>
            <div class="mb-3">
                <label class="form-label" for="title">Title :</label>
                <input class="form-control" type="text" id="title" name="restaurant[title]" value="<%= restaurant.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location :</label>
                <input class="form-control" type="text" id="location" name="restaurant[location]" value="<%= restaurant.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="inputGroupFile01">Upload More Image(s) :</label>
                <input type="file" class="form-control" id="inputGroupFile01" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Restaurant Price :</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">â‚¹</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-describedby="price-label" name="restaurant[price]" value="<%= restaurant.price %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description :</label>
                <textarea class="form-control" type="text" id="description" name="restaurant[description]" required><%= restaurant.description %> </textarea>
            </div>
            
            <div class="mb-3">
                <% restaurant.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>"><h4>Delete?</h4></label>
                <% })%>
            </div>

            <div class="mb-3 mt-1">
                <a class="btn btn-danger me-3" href="/restaurants/<%= restaurant._id %> ">Cancel</a>
                <button class="btn btn-success">Update Restaurant</button>
            </div>
            
            
        </form>
    </div>
</div>
